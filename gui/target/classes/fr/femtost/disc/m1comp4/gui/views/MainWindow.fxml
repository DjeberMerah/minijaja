<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.femtost.disc.m1comp4.gui.controllers.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                <MenuItem mnemonicParsing="false" onAction="#newFile" text="New" />
                  <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="close" disable="true" mnemonicParsing="false" onAction="#closeFile" text="Close" />
                  <MenuItem fx:id="closeAll" disable="true" mnemonicParsing="false" text="Close All" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="save" disable="true" mnemonicParsing="false" onAction="#saveFile" text="Save" />
                  <MenuItem fx:id="saveAs" disable="true" mnemonicParsing="false" onAction="#saveFileAs" text="Save As..." />
                  <MenuItem fx:id="saveAll" disable="true" mnemonicParsing="false" onAction="#saveAllFiles" text="Save All" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Run">
              <items>
                <MenuItem fx:id="run" mnemonicParsing="false" onAction="#interpret" text="Run" />
                  <MenuItem fx:id="compile" mnemonicParsing="false" onAction="#compile" text="Compile" />
                  <MenuItem fx:id="compileAndRun" mnemonicParsing="false" onAction="#compileAndRun" text="Compile &amp; Run" />
                  <MenuItem fx:id="compileAndRunByStep" mnemonicParsing="false" onAction="#compileAndRunByStep" text="Compile &amp; Run step-by-step" />
                  <MenuItem fx:id="stepByStep" mnemonicParsing="false" onAction="#initStepByStep" text="Init Step-By-Step Run" />
                  <MenuItem fx:id="nextStep" mnemonicParsing="false" onAction="#nextStep" text="Next Step" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Console">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#clearConsole" text="Clear" />
              </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <SplitPane dividerPositions="0.75" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
         <items>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <SplitPane dividerPositions="0.75" prefHeight="160.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <items>
                        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="0.0" prefWidth="0.0">
                           <children>
                              <TabPane fx:id="tabs_file" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </children>
                        </AnchorPane>
                        <AnchorPane maxWidth="-Infinity" prefWidth="128.0">
                           <children>
                              <TextFlow maxHeight="16.0" prefHeight="50.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Memory" />
                                 </children>
                                 <padding>
                                    <Insets left="8.0" />
                                 </padding>
                              </TextFlow>
                              <TextArea id="memory" fx:id="memory" editable="false" minWidth="192.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="16.0" />
                           </children>
                        </AnchorPane>
                     </items>
                  </SplitPane>
               </children>
            </AnchorPane>
            <AnchorPane maxHeight="-Infinity" prefHeight="512.0">
               <children>
                  <TextFlow maxHeight="25.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="50.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Console" />
                     </children>
                     <padding>
                        <Insets left="8.0" />
                     </padding>
                  </TextFlow>
                  <ScrollPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="16.0">
                     <content>
                        <TextFlow id="console" fx:id="console" maxHeight="124.0" />
                     </content>
                  </ScrollPane>
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
